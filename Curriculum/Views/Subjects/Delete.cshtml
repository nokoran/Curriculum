@using Microsoft.AspNetCore.Mvc.TagHelpers
@model Curriculum.Entities.Subject
@{
    ViewData["Title"] = "Delete Subject";
}

<div class="row">
    <div class="col-md-6">
        <form asp-action="DeleteConfirmed">
            <h5>Delete Subject</h5>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-floating mt-3">
                <input asp-for="subject_name" class="form-control" disabled aria-required="true"/>
                <label asp-for="subject_name"></label>
                <span asp-validation-for="subject_name" class="text-danger"></span>
            </div>
            <div class="form-floating mt-3">
                <input value="@ViewBag.CourseName" class="form-control" disabled aria-required="true"/>
                <label asp-for="course_id">Course Name</label>
                <span asp-validation-for="course_id" class="text-danger"></span>
            </div>
            <input type="hidden" asp-for="id" />
            <div class="form-floating mt-3">
                <input type="submit" value="Delete" class="btn btn-danger"/>
            </div>
        </form>
    </div>
</div>
