@using Microsoft.AspNetCore.Mvc.TagHelpers
@model Curriculum.Entities.Teacher
@{
    ViewData["Title"] = "Delete Teacher";
}

<div class="row">
    <div class="col-md-6">
        <form asp-action="DeleteConfirmed">
            <h5>Delete Teacher</h5>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-floating mt-3">
                <input asp-for="full_name" class="form-control" disabled aria-required="true"/>
                <label asp-for="full_name">Teacher Name</label>
                <span asp-validation-for="full_name" class="text-danger"></span>
            </div>
            <div class="form-floating mt-3">
                <input asp-for="desc" class="form-control" disabled aria-required="true"/>
                <label asp-for="desc">Description</label>
                <span asp-validation-for="desc" class="text-danger"></span>
            </div>
            <input type="hidden" asp-for="id" /> <!-- Add this line -->
            <div class="form-floating mt-3">
                <input type="submit" value="Delete" class="btn btn-danger"/>
            </div>
        </form>
    </div>
</div>
